extends layout

block content
    section.section
        .container
            .signin-form.row-fluid
                .span5(style="margin-left: 30%;")
                    .box.corner-all
                        .box-header.grd-teal.color-white.corner-top
                            span Sign In
                        .box-body.bg-white(ng-controller="LoginController")
                            p.alert.alert-error(ng-show="errorMessage")
                                span {{ errorMessage }}
                            form(id="loginForm", name="loginForm")
                                .control-group
                                    label.control-label(for="username") Username:
                                    .controls
                                        input.input-block-level(type="text", name="username", id="username", ng-model="username", placeholder="Username", autocomplete="off")
                                        .input-help
                                            h4 Username is required
                                .control-group
                                    label.control-label(for="password") Password:
                                    .controls
                                        input.input-block-level(type="password", name="password", id="password", ng-model="password", placeholder="Password", autocomplete="off")
                                        .input-help
                                            h4 Password is required
                                .form-actions
                                    button.btn.btn-block.btn-large.btn-primary(ng-click="login()", ng-disabled="loginForm$invalid") Sign In